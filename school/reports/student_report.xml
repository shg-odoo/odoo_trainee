<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <!-- pdf report for student model -->
    <report id="pdf_report_student" 
            model="student"
            string="Student PDF Report"
            name="school.pdf_report_view_stu"
            file="school.pdf_report_student"
            report_type="qweb-pdf"
            attachment_use="True" />

            <!-- name="<module_name>.<template_id>" 
                 file="<module_name>.<report_id>"
                 for reporting we need to use report tag and for it's stucture we
                 need to use template tag.  -->

    <!-- template or stucture for report design -->
    <template id="pdf_report_view_stu">  <!-- id must be same as report tag name attribute-->
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div>
                        <center>
                            <strong><h1>Student Details</h1></strong>
                            <br />
                        </center>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Enrollment No</th>
                                <th scope="col">School</th>
                                <th scope="col">DOB</th>
                            </tr>
                        </thead>
                        <t t-foreach="docs" t-as="student">
                            <tbody>
                                <tr>
                                    <td><span t-field="student.name"/></td>
                                    <td><span t-field="student.enroll_num"/></td>
                                    <td><span t-field="student.school_id"/></td>
                                    <td><span t-field="student.dob"/></td>
                                </tr>
                            </tbody>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>