<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- student details -->
    <record id="student_view_tree" model="ir.ui.view">
        <field name="name">Student.tree</field>
        <field name="model">new.student</field>
        <field name="arch" type="xml">
            <tree string="Students List">
                <field name="image" widget="image" options="{'size': [90, 90]}" class="oe_avatar" />
                <field name="student_name" required="1"/>
                <field name="email"/>
                <field name="student_age"/>
                <field name="student_percentage"/>
                <field name="student_birthdate"/>
                <field name="current_date"/>
                <field name="gender" widget="radio"/>
                <field name="branch"/>
                <field name="city"/>
                <field name="college_id"/>
                <field name="hobbies" widget="many2many_tags"/>
            </tree>
        </field>
    </record>
    <record id="student_form" model="ir.ui.view">
        <field name="name">Student.form</field>
        <field name="model">new.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1><field name="student_name"/></h1>
                    <notebook>
                        <page string="Personal Details">
                            <group>
                                <field name="image" widget="image" class="oe_avatar"/>
                            </group>
                            <group>
                                <field name="email"/>
                                <field name="gender" widget="radio"/>
                                <field name="hobbies" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="city"/>
                                <field name="student_birthdate"/>
                                <field name="student_age"/>
                            </group>
                        </page>
                        <page string="College Details">
                            <group>
                                <field name="branch"/>
                                <field name="college_id"/>
                            </group>
                        </page>
                        <page string="Marks">
                            <group>
                                <field name="fy_marks"/>
                                <field name="sy_marks"/>
                                <field name="ty_marks"/>
                                <field name="total_marks" readonly="1" />
                                <field name="student_percentage"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="student_action" model="ir.actions.act_window" >
    <field name="name">Student</field>
    <field name="res_model">new.student</field>
    <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="student_menu" name="Student Inheritance" sequence="0" />
    <menuitem id="student_details" name="Student" parent="student_menu" action="student_action" sequence="1"/>
</odoo>
