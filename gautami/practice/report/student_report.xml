<odoo>
    <report
        id="report_student"
        model="student.details"
        string ="Student Report"
        name = "practice.report_students_view"
        file = "practice.report_student"
        report_type = "qweb-pdf"
        attachment_use ="True" />
    <report
        id="report_student_primary"
        model="student.details"
        string="Student Report Primary"
        name="practice.inherit_report_student_view_primary"
        file="practice.report_student"
        report_type="qweb-pdf" 
        attachment_use="True"/>

    <template id="report_students_view">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <center><h1><b>Student Details </b></h1></center>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Percentage</th>
                                <th scope="col">Birthdate</th>
                                <th scope="col">College</th>
                                <th scope="col">Branch</th>
                            </tr>
                        </thead>    
                        <tbody>
                        <t t-foreach="docs" t-as="doc">
                        <tr>
                            <td><span t-field="doc.student_name"/></td>
                            <td><span t-field="doc.student_percentage"/></td>
                            <td><span t-field="doc.student_birthdate"/></td>
                            <td><span t-field="doc.college_id"/></td>
                            <td><span t-field="doc.branch"/></td>
                        </tr>
                        </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <template id="inherit_report_student_view" inherit_id="report_students_view">
        <xpath expr="//div[hasclass('page')]" position="inside">
            <h2>Inside</h2>
        </xpath>
        <xpath expr="(//th)[1]" position="after">
            <th scope="col">Gender</th>
        </xpath>
        <xpath expr="(//td)[1]" position="after">
            <td><span t-field="doc.gender"/></td>
        </xpath>
    </template>

    <template id="inherit_report_student_view_primary" inherit_id="report_students_view" primary="True">
      <xpath expr="(//th)[1]" position="after">
        <th scope="col">Email</th>
      </xpath>
      <xpath expr="(//td)[1]" position="after">
        <td><span t-field="doc.email"/></td>
      </xpath>
    </template>

</odoo>