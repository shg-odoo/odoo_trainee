<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <report
        id="student_report_card"
        model="student"
        string="Print"
        name="student_demo.student_report"
        file="student_demo.student_report"
        report_type="qweb-pdf"
        attachment_use="True"
    />

    <template id="student_report">
        <t t-call="web.html_container">
        <t t-call="web.external_layout">
        	<center>
        	<h1><b>Student Details</b></h1>
        	</center>
        	<table style="width:100%;border: 10px solid #ddd;padding: 20px; ">
	          <thread>
	          	<tr>
                   <th style="border: 2px solid #ddd;padding: 8px;background-color: #4CAF50;">Name</th>
                   <th style="border: 2px solid #ddd;padding: 8px;background-color: #4CAF50;">AGE</th>
                   <th style="border: 2px solid #ddd;padding: 8px;background-color: #4CAF50;">Gender</th>
                   <th style="border: 2px solid #ddd;padding: 8px;background-color: #4CAF50;">Branch</th>
                   <th style="border: 2px solid #ddd;padding: 8px;background-color: #4CAF50;">Date</th>
                </tr>
	        	<t t-foreach="docs" t-as="o">
	        		<tr  style="border: 2px solid #ddd;padding: 8px;">

		                <td style="border: 2px solid #ddd;padding: 8px ;font-size:20px;">       
			        		<span t-field="o.name"/>
			        	</td><p/>

			        	<td style="border: 2px solid #ddd;padding: 8px;font-size:20px;">       	
			        	 <span t-field="o.age"/>
			        	</td><p/>

			        	<td style="border: 2px solid #ddd;padding: 8px;font-size:20px;">       		
			        		<span t-field="o.gender"/>
			        	</td><p/>

			        	<td style="border: 2px solid #ddd;padding: 8px;font-size:20px;">       		
			        	    <span t-field="o.branch"/>
			        	</td><p/>

			        	<td style="border: 2px solid #ddd;padding: 8px;font-size:20px;">       		
			        		<span t-field="o.date"/>
			        	</td>
		        	</tr>	
	        	</t>
	          </thread>
	        </table> 	
        </t>
        </t>
    </template>

</odoo>