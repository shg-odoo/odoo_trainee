<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="student_view_tree" model="ir.ui.view">
        <field name="name">Student.tree</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <tree string="Students List">
                <field name="name" />
                <field name="dob"/>
                <field name="governmentID"/>
                <field name="contactNo"/>
                <field name="email"/>
                <field name="occupation"/>
                <field name="gender" widget="radio" options="{'vertical':true}"/>                                    
                <!-- <field name="image" widget="image" class="oe_avatar"/>                     -->
                <field name="address"/>
            </tree>
        </field>
    </record>
    <record id="student_view_graph" model="ir.ui.view">
        <field name="name">student</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <graph string="Students">
                <field name="name" />
                <field name="dob"/>
                <field name="governmentID" type="measure"/>
                <field name="contactNo"/>
                <field name="email"/>
                <field name="occupation" />
                <field name="gender"  />                     
                <field name="address"/>
            </graph>
        </field>
    </record>
    <record id="student_view_calendar" model="ir.ui.view">
        <field name="name">student </field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <calendar color="name"  date_start="dob"  string="Student calendar" mode="month" >
                <field name="name" />
                <field name="dob"/>
                <field name="governmentID"/>
                <field name="contactNo"/>
                <field name="email"/>
                <field name="occupation"/>
                <field name="gender" widget="radio" options="{'vertical':true}"/>            
                <field name="address"/>
            </calendar>
        </field>
    </record>
    <record model="ir.ui.view" id="student_gantt_view">
            <field name="name">student.gantt</field>
            <field name="model">student</field>
            <field name="arch" type="xml">
                <gantt date_stop="dob" date_start="dob" string="Session Gantt" default_group_by="occupation">
                </gantt>
            </field>
    </record>

    <record id="student_kanban" model="ir.ui.view">
            <field name="name">student</field>
            <field name="model">student</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image"> 
                                       <img t-att-src="kanban_image('student', 'image')"  alt="Avatar"/>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <strong><field name="name"/></strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <span class="badge badge-pill"><field name="occupation"/></span>
                                    </div>
                                </div>
                                <div>
                                    <strong>Email: </strong><field name="email"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
    </record>    

    <record id="student_view_form" model="ir.ui.view">
        <field name="name">Student.form</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1><field name="name"/></h1>
                <notebook>
                    <page string="Personal Details">
                        <group>
                            <field name="image" widget="image" class="oe_avatar"/>
                            <field name="occupation"/>
                        </group>
                        <group>
                            <field name="dob" required='1'/>
                            <field name="gender" widget="radio"/>
                            <field name="email"/>
                            <field name="address"/>
                        </group>
                    </page>
                </notebook>
            </sheet>
            </form>
        </field>
    </record>
    <record id="student_action" model="ir.actions.act_window" >
            <field name="name">Student</field>
            <field name="res_model">student</field>
            <field name="view_mode">tree,graph,calendar,gantt,kanban,form</field>
    </record>
    <menuitem id="student_menu" name="Student Data"/>

    <menuitem id="student" name="Details" sequence="1" action="student_action" parent="student_menu"/>
</odoo>