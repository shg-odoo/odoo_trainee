<odoo>
    <template id="sale_proposal_portal_template" name="Proposal Order Portal Template"
              inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-set="o_portal_fullwidth_alert" groups="sales_team.group_sale_salesman">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url"
                       t-value="'/web#model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (sale_proposal._name, sale_proposal.id, sale_proposal.env.ref('sale_proposal.action_sale_proposal').id)"/>
                </t>
            </t>

            <div class="row mt16 o_portal_sale_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>

                    <t t-set="title">
                        <h2 class="mb-0">
                            <b t-field="sale_proposal.total" data-id="total_amount"/>
                        </h2>
                    </t>
                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li class="list-group-item flex-grow-1">

                                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                    <div class="btn-group flex-grow-1 mr-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_download_btn"
                                           t-att-href="sale_proposal.get_portal_url(report_type='pdf', download=True)"
                                           title="Download">
                                            <i class="fa fa-download"/>
                                            Download
                                        </a>
                                    </div>
                                    <div class="btn-group flex-grow-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_print_btn o_portal_invoice_print"
                                           t-att-href="sale_proposal.get_portal_url(report_type='pdf')"
                                           id="print_invoice_report" title="Print" target="_blank">
                                            <i class="fa fa-print"/>
                                            Print
                                        </a>
                                    </div>
                                </div>
                            </li>

                            <li class="navspy list-group-item pl-0 flex-grow-1" t-ignore="true" role="complementary">
                                <ul class="nav flex-column bs-sidenav"></ul>
                            </li>
                        </ul>
                    </t>
                </t>

                <!-- Page content -->

                <div id="proposal_content" class="col-12 col-lg justify-content-end">
                    <!--  main content  -->
                    <div t-attf-class="card #{'pb-5' if report_type == 'html' else ''}">
                        <div t-call="sale_proposal.proposal_portal_content"/>
                    </div>
                    <!--  bottom actions  -->
                    <!--                    <div t-attf-class="row justify-content-center text-center d-print-none pt-1 pb-4">-->
                    <!--                        <div t-if="sale_proposal.proposal_status != 'accept' and sale_proposal.proposal_status != 'reject'"-->
                    <!--                             class="col-sm-auto mt8">-->
                    <!--                            <a role="button" class="btn btn-primary" data-toggle="modal" data-target="#modalaccept"-->
                    <!--                               t-att-href="sale_proposal.get_portal_url(suffix='/accept')">-->
                    <!--                                <i class="fa fa-check"/>-->
                    <!--                                <t>Accept</t>-->
                    <!--                            </a>-->
                    <!--                        </div>-->
                    <!--                        <div t-if="sale_proposal.proposal_status != 'accept' and sale_proposal.proposal_status != 'reject'"-->
                    <!--                             class="col-sm-auto mt8">-->
                    <!--                            <a role="button" class="btn btn-danger" data-toggle="modal" data-target="#modaldecline"-->
                    <!--                               t-att-href="sale_proposal.get_portal_url(suffix='/reject')">-->
                    <!--                                <i class="fa fa-times"/>-->
                    <!--                                Reject-->
                    <!--                            </a>-->
                    <!--                        </div>-->
                    <!--                    </div>-->


                    <div id="buttons_id" class="row justify-content-center text-center d-print-none pt-1 pb-4"
                         style=" margin-left: 183px;">
                        <t t-if="sale_proposal.proposal_status != 'accept' and sale_proposal.proposal_status != 'reject' ">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="col-sm-auto mt8 ">
                                <a role="button" class="btn btn-primary accept_btn" data-toggle="modal">
                                    <i class="fa fa-check"/>
                                    Accept
                                </a>
                            </div>
                            <div class="col-sm-auto mt8">
                                <a role="button" class="btn btn-danger reject_btn" data-toggle="modal">
                                    <i class="fa fa-times"/>
                                    Reject
                                </a>
                            </div>
                        </t>
                        <t t-else="">
                            <h1>Thank You</h1>
                        </t>
                    </div>
                </div>


                <div role="dialog" class="modal fade" id="modaldecline">
                    <div class="modal-dialog">
                        <form id="decline" method="POST"
                              t-attf-action="/my/proposals/#{sale_proposal.id}/decline?access_token=#{sale_proposal.access_token}"
                              class="modal-content">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <header class="modal-header">
                                <h4 class="modal-title">Reject This Proposal</h4>
                                <button type="button" class="close" data-dismiss="modal"
                                        aria-label="Close">
                                </button>
                            </header>
                            <!--                                    <main class="modal-body">-->
                            <!--                                        <p>Tell us why you are refusing this proposal, this will help us improve our-->
                            <!--                                            services.-->
                            <!--                                        </p>-->
                            <!--                                        <textarea rows="4" name="decline_message" required=""-->
                            <!--                                                  placeholder="Your feedback..." class="form-control"/>-->
                            <!--                                    </main>-->
                            <footer class="modal-footer">
                                <button type="submit" t-att-id="sale_proposal.id" class="btn btn-danger">
                                    <i class="fa fa-times"
                                       t-att-href="sale_proposal.get_portal_url(suffix='/decline')"/>
                                    Reject
                                </button>
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel
                                </button>
                            </footer>
                        </form>
                    </div>
                </div>
                <div role="dialog" class="modal fade" id="modalaccept">
                    <div class="modal-dialog">
                        <form id="accepting" method="POST"
                              t-attf-action="/my/proposals/#{sale_proposal.id}/accept?access_token=#{sale_proposal.access_token}"
                              class="modal-content">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <header class="modal-header">
                                <h4 class="modal-title">Accept This Proposal</h4>
                                <button type="button" class="close" data-dismiss="modal"
                                        aria-label="Close">
                                </button>
                            </header>
                            <!--                                    <main class="modal-body">-->
                            <!--                                        <p>Are you sure you want to accept this proposal?</p>-->
                            <!--                                        <textarea rows="4" name="accept_message" required=""-->
                            <!--                                                  placeholder="Your feedback..." class="form-control"/>-->
                            <!--                                    </main>-->
                            <footer class="modal-footer">
                                <button type="submit" t-att-id="sale_proposal.id" class="btn btn-primary">
                                    <i class="fa fa-check"
                                       t-att-href="sale_proposal.get_portal_url(suffix='/accept')"/>
                                    Accept
                                </button>
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel
                                </button>
                            </footer>
                        </form>
                    </div>
                </div>
                <!--  chatter  -->
                <!--                        <div id="proposal_communication" class="mt-4">-->
                <!--                            <h2>History</h2>-->
                <!--                            <t t-call="portal.message_thread">-->
                <!--                                <t t-set="object" t-value="proposals_proposals"/>-->
                <!--                            </t>-->
                <!--                        </div>-->
            </div>
        </xpath>
    </template>


    <!--            </div>-->

    <template id="proposal_portal_content" name="Proposal Portal Content">
        <div class="proposal_content">
            <div id="introduction" t-attf-class="pb-2 pt-3 #{'card-header bg-white' if report_type == 'html' else ''}">
                <h2 class="my-0">
                    <span t-field="sale_proposal.name_seq"/>
                    <!--                    <em t-esc="proposal_order.name"/>-->
                </h2>
            </div>
            <div t-attf-class="#{'card-body' if report_type == 'html' else ''}">
                <!--  Informations  -->
                <div id="informations">
                    <div t-att-data-order-id="sale_proposal.id"></div>
                    <div class="mb-3">
                        <strong>Proposal Date:</strong>
                        <span t-field="sale_proposal.date_proposal" t-options="{'widget': 'date'}"/>
                    </div>
                    <div class="mb-3">
                        <strong>Customer</strong>
                        <div>
                            <span t-field="sale_proposal.partner_id"/>
                            <br/>
                            <span t-field="sale_proposal.partner_id.street"/>
                            <br/>
                            <span t-field="sale_proposal.partner_id.street2"/>
                            <span t-field="sale_proposal.partner_id.city"/>
                            ,
                            <span t-field="sale_proposal.partner_id.country_id"/>
                        </div>
                    </div>
                </div>
                <section id="details" style="page-break-inside: auto;" class="mt32">
                    <h3 id="details">Details</h3>
                    <table class="table table-sm" id="sale_proposal_table">
                        <thead class="bg-100">
                            <tr>
                                <t t-set="colspan" t-value="6"/>
                                <th class="text-left">Products</th>
                                <th class="text-left">Proposed Quantity</th>
                                <th class="text-left">Proposed Price</th>
                                <th class="qty_accept text-left">Accepted Quantity</th>
                                <th class="text-left">Accepted Price</th>
                                <!--  <th class="text-right" >
                                                                <span>Subtotal</span>
                                                            </th>  -->
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <t t-set="current_subtotal" t-value="0.0"/>
                            <input class="record_id" type="hidden" t-att-value="sale_proposal.id"/>
                            <t t-foreach="sale_proposal.proposal_line_ids" t-as="line">
                                <tr>
                                    <td>
                                        <span t-field="line.product_id"/>
                                    </td>
                                    <td>
                                        <span t-field="line.qty_proposed"/>
                                    </td>
                                    <td>
                                        <span t-field="line.price_proposed"/>
                                    </td>
                                    <td>
                                        <div class="number">
                                            <span class="minus">-</span>
                                            <input t-att-line_id="line.id" id="inputid" name="qty_accepted"
                                                   class="qty_accepted"
                                                   t-att-value="line.qty_accepted" type="text"/>
                                            <span class="plus">+</span>
                                        </div>
                                    </td>
                                    <td>
                                        <input name="price_accepted" class="price_accepted"
                                               t-att-value="line.price_accepted" type="text"
                                               style="width: 100px;"/>
                                    </td>
                                    <!--  <td>
                                                                    <span t-field='line.price_subtotal'/>
                                                                </td>  -->
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <div id="total" class="row" name="total" style="page-break-inside: avoid;">
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                            <table class="table table-sm">
                                <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                    <td>
                                        <strong>Proposed Total</strong>
                                    </td>
                                    <td class="text-left">
                                        <span class="text-right" data-id="proposed_total"
                                              t-field="sale_proposal.proposed_total"
                                              t-options="{'widget': 'monetary','display_currency': sale_proposal.currency_id}"/>
                                    </td>
                                </tr>
                                <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                    <td>
                                        <strong>Accepted Total</strong>
                                    </td>
                                    <td class="text-left">
                                        <span class="text-right" t-field="sale_proposal.accepted_total"
                                              t-options="{'widget': 'monetary','display_currency': sale_proposal.currency_id}"/>
                                    </td>
                                </tr>
                                <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                    <td>
                                        <strong>Total</strong>
                                    </td>
                                    <td class="text-left">
                                        <span class="text-right" data-id="total_untaxed" t-field="sale_proposal.total"
                                              t-options="{'widget': 'monetary','display_currency': sale_proposal.currency_id}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </template>
</odoo>