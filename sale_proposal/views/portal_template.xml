<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_proposal_portal_template" name="Proposal Order Portal Template"
              inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <div class="portal_accept_reject">
                <t t-set="o_portal_fullwidth_alert">
                    <t t-call="portal.portal_back_in_edit_mode">
                        <t t-set="backend_url"
                           t-value="'/web#return_label=Website&amp;model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (sale_proposal.name_seq, sale_proposal.id, sale_proposal.env.ref('sale_proposal.action_sale_proposal').id)"/>
                    </t>
                </t>
                <div class="row mt16 o_portal_sale_sidebar">
                    <t t-call="portal.portal_record_sidebar">
                        <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>
                        <t t-set="title">
                            <h2 class="mb-0">
                                <b t-field="sale_proposal.total" data-id="total_amount"/>
                            </h2>
                        </t>
                        <t t-set="entries">
                            <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                                <li class="list-group-item flex-grow-1">
                                    <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                        <div class="btn-group flex-grow-1 mr-1 mb-1">
                                            <a class="btn btn-secondary btn-block o_download_btn"
                                               t-att-href="sale_proposal.get_portal_url(report_type='pdf', download=True)"
                                               title="Download">
                                                <i class="fa fa-download"/>
                                                Download
                                            </a>
                                        </div>
                                        <div class="btn-group flex-grow-1 mb-1">
                                            <a class="btn btn-secondary btn-block o_print_btn o_portal_invoice_print"
                                               t-att-href="sale_proposal.get_portal_url(report_type='pdf')"
                                               id="print_invoice_report" title="Print" target="_blank">
                                                <i class="fa fa-print"/>
                                                Print
                                            </a>
                                        </div>
                                    </div>
                                </li>
                                <li class="navspy list-group-item pl-0 flex-grow-1" t-ignore="true"
                                    role="complementary">
                                    <ul class="nav flex-column bs-sidenav"></ul>
                                </li>
                            </ul>
                        </t>
                    </t>
                    <div id="quote_content" class="col-12 col-lg justify-content-end">
                        <div t-attf-class="card #{'pb-5' if report_type == 'html' else ''}">
                            <div t-call="sale_proposal.sale_proposal_portal_content"/>
                        </div>
                    </div>
                </div>
                <div id="buttons_id" class="row justify-content-center text-center d-print-none pt-1 pb-4"
                     style=" margin-left: 183px;">
                    <t t-if="sale_proposal.state != 'proposal_accepted' and sale_proposal.state != 'proposal_rejected' ">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="col-sm-auto mt8 ">
                            <a role="button" class="accept_button btn btn-primary" data-toggle="modal">
                                <i class="fa fa-check"/>
                                Accept
                            </a>

                        </div>
                        <div class="col-sm-auto mt8">
                            <a role="button" class="reject_button btn btn-danger" data-toggle="modal">
                                <i class="fa fa-times"/>
                                Reject
                            </a>
                        </div>
                    </t>
                </div>
            </div>
        </xpath>
    </template>
    <template id="sale_proposal_portal_content" name="Proposal Order Portal Content">
        <div class="proposal_content">
            <div id="introduction" t-attf-class="pb-2 pt-3 #{'card-header bg-white' if report_type == 'html' else ''}">
                <h2 class="my-0">
                    <span t-field="sale_proposal.name_seq"/>
                </h2>
            </div>
            <div t-attf-class="#{'card-body' if report_type == 'html' else ''}">
                <div id="informations">
                    <div t-att-data-order-id="sale_proposal.id"></div>
                    <div class="mb-3">
                        <strong>Proposal Date:</strong>
                        <span t-field="sale_proposal.date_proposal" t-options="{'widget': 'date'}"/>
                    </div>
                    <div class="mb-3">
                        <strong>Customer</strong>
                        <div>
                            <span t-field="sale_proposal.partner_id"/>
                            <br/>
                            <span t-field="sale_proposal.partner_id.street"/>
                            <br/>
                            <span t-field="sale_proposal.partner_id.street2"/>
                            <span t-field="sale_proposal.partner_id.city"/>
                            ,
                            <span t-field="sale_proposal.partner_id.country_id"/>
                        </div>
                    </div>
                </div>
                <section id="details" style="page-break-inside: auto;" class="mt32">
                    <h3 id="details">Details</h3>
                    <table class="table table-sm" id="sale_proposal_table">
                        <thead class="bg-100">
                            <tr>
                                <t t-set="colspan" t-value="6"/>
                                <th class="text-left">Image</th>

                                <th class="text-left">Products</th>
                                <th class="text-left">Proposed Quantity</th>
                                <th class="text-left">Proposed Price</th>
                                <th class="qty_accept text-left">Accepted Quantity</th>
                                <th class="text-left">Accepted Price</th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <input class="proposal_id" type="hidden" t-att-value="sale_proposal.id"/>
                            <t t-foreach="sale_proposal.proposal_line_ids" t-as="line">
                                <tr>
                                    <td>
                                        <span widget="image" t-field="line.product_id.image_1920"
                                              t-options="{'widget': 'image'}"/>

                                    </td>
                                    <td>
                                        <span t-field="line.product_id"/>
                                    </td>
                                    <td>
                                        <span t-field="line.qty_proposed"/>
                                    </td>
                                    <td>
                                        <span t-field="line.price_proposed"/>
                                    </td>
                                    <td>
                                        <div class="number">
                                            <button id="minus">âˆ’</button>
                                            <input t-att-line_id="line.id" type="number" id="input" class="accept_qty"
                                                   t-att-value="line.qty_accepted"/>
                                            <button id="plus">+</button>
                                        </div>
                                    </td>
                                    <td>
                                        <input class="accept_price" t-att-value="line.price_accepted" type="text"
                                               style="width: 100px;"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <div id="total" class="row" name="total" style="page-break-inside: avoid;">
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                            <table class="table table-sm">
                                <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                    <td>
                                        <strong>Proposed Total</strong>
                                    </td>
                                    <td class="text-left">
                                        <span class="text-right" data-id="proposed_total"
                                              t-field="sale_proposal.proposed_total"
                                              t-options="{'widget': 'monetary','display_currency': sale_proposal.currency_id}"/>
                                    </td>
                                </tr>
                                <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                    <td>
                                        <strong>Accepted Total</strong>
                                    </td>
                                    <td class="text-left">
                                        <span class="text-right" t-field="sale_proposal.accepted_total" t-options="{'
                                              widget': 'monetary','display_currency': sale_proposal.currency_id}"/>
                                    </td>
                                </tr>
                                <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                    <td>
                                        <strong>Total</strong>
                                    </td>
                                    <td class="text-left">
                                        <span class="text-right" data-id="total_untaxed" t-field="sale_proposal.total"
                                              t-options="{'widget': 'monetary','display_currency'
                                        : sale_proposal.currency_id}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </template>
</odoo>