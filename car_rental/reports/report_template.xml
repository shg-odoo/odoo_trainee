<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_rental_informations">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <div class="oe_structure"/>
                    <h2 class="mt16">
                        <span t-field="o.name_seq"/>
                        <div class="col-auto mw-100 mb-2">
                            <p class="m-0" t-field="o.car_id.car_name"/>
                        </div>
                    </h2>
                    <div class="row mt32 mb32" id="informations">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Customer:</strong>
                            <p class="m-0" t-field="o.partner_id.name"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Booking From:</strong>
                            <p class="m-0" t-field="o.from_date"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Booking To:</strong>
                            <p class="m-0" t-field="o.to_date"/>
                        </div>
                    </div>
                    <table border="2" style="width:100%;">
                        <tr style="font-weight:bold;">
                            <td>Car Name</td>
                            <td>Number Of Seats</td>
                            <td>Rate Per Hour</td>
                            <td>Total Hour Booked</td>
                            <td>Total</td>
                        </tr>
                        <tr>
                            <td>
                                <t t-esc="o.car_id.car_name"/>
                            </td>
                            <td>
                                <t t-esc="o.car_id.number_of_seats"/>
                            </td>
                            <td>
                                <t t-esc="o.car_id.amount_per_hour"/>
                            </td>
                            <td>
                                <t t-esc="o.rental_lines.total_hour"/>
                            </td>
                            <td>
                                <t t-esc="o.rental_lines.sub_total"
                                   t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
    </template>


    <template id="report_rental">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="car_rental.report_rental_informations" t-lang="lang"/>
            </t>
        </t>
    </template>
</odoo>