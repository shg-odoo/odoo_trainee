<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Complete page of the proposal_order -->

    <template id="product_proposal_portal_template" name="Propsal Order Portal Template"
              inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <div class="portal_accept_reject">
                <t t-set="o_portal_fullwidth_alert" groups="sales_team.group_sale_salesman">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url"
                       t-value="'/web#model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (proposal_order._name, proposal_order.id, action.id)"/>
                </t>
            </t>
            </div>

            <div class="row mt16 o_portal_sale_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>

                    <t t-set="title">
                        <h2 class="mb-0">
                            <b t-field="proposal_order.proposed_total" data-id="total_amount"/>
                        </h2>

                    </t>
                    <!--                    side buttons here..............-->
                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li class="list-group-item flex-grow-1">
                                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                    <div class="btn-group flex-grow-1 mr-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_download_btn"
                                           style="color:white;background-color:black !important;"
                                           t-att-href="proposal_order.get_portal_url(report_type='pdf', download=True)"
                                           title="Download">
                                            <i class="fa fa-download"/>
                                            DOWNLOAD
                                        </a>
                                    </div>
                                    <div class="btn-group flex-grow-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_print_btn o_portal_invoice_print"
                                           t-att-href="proposal_order.get_portal_url(report_type='pdf')"
                                           style="color:white;background-color:black;"
                                           id="print_proposal_report" title="Print" target="_blank">
                                            <i class="fa fa-print"/>
                                            STAMPA
                                        </a>
                                    </div>
                                </div>
                            </li>

                            <li class="navspy list-group-item pl-0 flex-grow-1" t-ignore="true" role="complementary">
                                <ul class="nav flex-column bs-sidenav"></ul>
                            </li>


                            <li t-if="proposal_order.user_id" class="list-group-item flex-grow-1">
                                <div class="small mb-1">
                                    <strong class="text-muted">Salesperson</strong>
                                </div>
                                <div class="row flex-nowrap">
                                    <div class="col flex-grow-0 pr-2">
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img"
                                             t-if="proposal_order.user_id.image_1024"
                                             t-att-src="image_data_uri(proposal_order.user_id.image_1024)"
                                             alt="Contact"/>
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img"
                                             t-if="not proposal_order.user_id.image_1024"
                                             src="/web/static/src/img/placeholder.png" alt="Contact"/>
                                    </div>
                                    <div class="col pl-0" style="min-width: 150px">
                                        <span t-field="proposal_order.user_id"
                                              t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True}'/>
                                        <a href="#discussion" class="small">
                                            <i class="fa fa-comment"></i>
                                            Send message
                                        </a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </t>
                </t>

                <!-- Page content -->
                <div id="quote_content" class="col-12 col-lg justify-content-end">
                    <!--                    new acccept modal-->
                    <div role="dialog" class="modal fade" id="modalaccept">
                        <div class="modal-dialog" t-if="proposal_order.has_to_be_signed(True)">
                            <form id="accept" method="POST" t-att-data-order-id="proposal_order.id"
                                  t-att-data-token="proposal_order.access_token"
                                  class="accept_form js_accept_json modal-content js_website_submit_form">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <header class="modal-header">
                                    <h4 class="modal-title">Validate Order</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">&amp;times;</button>
                                </header>
                                <main class="modal-body" id="sign-dialog">
                                    <p>
                                        <span>By signing this proposal, I agree to the following terms:</span>
                                        <ul>
                                            <li>
                                                <span>Accepted on the behalf of:</span>
                                                <b t-field="proposal_order.partner_id.commercial_partner_id"/>
                                            </li>
                                            <li>
                                                <span>For an amount of:</span>
                                                <b data-id="total_amt" t-field="proposal_order.total_amt"/>
                                            </li>

                                        </ul>
                                    </p>
                                    <t t-call="portal.signature_form">
                                        <t t-set="call_url" t-value="proposal_order.get_portal_url(suffix='/accept')"/>
                                        <t t-set="default_name" t-value="proposal_order.partner_id.name"/>
                                    </t>
                                </main>
                            </form>
                        </div>
                    </div>


                    <!--                     modal relative to the action reject -->
                    <div role="dialog" class="modal fade" id="modaldecline">
                        <div class="modal-dialog">
                            <form id="decline" method="POST"
                                  t-attf-action="/my/proposals/#{proposal_order.id}/decline?access_token=#{proposal_order.access_token}"
                                  class="modal-content">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <header class="modal-header">
                                    <h4 class="modal-title">Reject This Proposal</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">&amp;times;</button>
                                </header>
                                <main class="modal-body">
                                    <p>
                                        Tell us why you are refusing this Proposal, this will help us improve our
                                        services.
                                    </p>
                                    <textarea rows="4" name="decline_message" required="" placeholder="Your feedback..."
                                              class="form-control"/>
                                </main>
                                <footer class="modal-footer">
                                    <button type="submit" t-att-id="proposal_order.id" class="btn btn-danger"
                                            style="color:white;background-color:black;">
                                        <i class="fa fa-times"></i>
                                        Reject
                                    </button>
                                    <button type="button" class="btn btn-primary"
                                            style="color:white;background-color:black;" data-dismiss="modal">Cancel
                                    </button>
                                </footer>
                            </form>
                        </div>
                    </div>

                    <!-- status messages -->
                    <div t-if="message == 'sign_ok'" class="alert alert-success alert-dismissable d-print-none"
                         role="status">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">&amp;times;</button>
                        <strong>Thank You!</strong>
                        <br/>
                        <t t-if="message == 'sign_ok' and proposal_order.state in ['draft','sent','accept', 'confirm']">
                            Your proposal has been accepted.
                        </t>

                        <t t-else="">Your order has been signed.</t>
                    </div>

                    <!--                    main content-->
                    <div t-attf-class="card #{'pb-5' if report_type == 'html' else ''}" id="portal_sale_content">
                        <div t-call="product_proposal.product_proposal_portal_content"/>
                    </div>

                    <!--                    new code-->

                    <!-- bottom actions -->
                    <div class="row justify-content-center text-center d-print-none pt-1 pb-4">

                        <t t-if="proposal_order.has_to_be_signed(True)">
                            <div class="col-sm-auto mt8">
                                <a role="button"  style="color:white;background-color:black;" class="accept_button btn btn-primary"
                                   data-toggle="modal" data-target="#modalaccept" href="#">
                                    <i class="fa fa-check"/>
                                    <t>Accept &amp; Sign</t>
                                </a>
                            </div>

                            <div class="col-sm-auto mt8">
                                <a role="button" style="color:white;background-color:black;" class="btn btn-danger"
                                   data-toggle="modal" data-target="#modaldecline" href="#">
                                    <i class="fa fa-times"/>
                                    Reject
                                </a>
                            </div>
                        </t>
                    </div>


                    <!-- chatter -->
                    <div id="proposal_order_communication" class="mt-4">
                        <h2>History</h2>
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="proposal_order"/>
                        </t>
                    </div>
                </div><!-- // #quote_content -->
            </div>
        </xpath>
    </template>
    <!--content template................-->
    <template id="product_proposal_portal_content" name="Product Proposal Portal Content">
        <!-- Intro -->
        <div id="introduction" t-attf-class="pb-2 pt-3 #{'card-header bg-white' if report_type == 'html' else ''}">
            <h2 class="my-0">
                PROPOSAL
                <em t-esc="proposal_order.name_seq"/>
            </h2>
        </div>

        <div t-attf-class="#{'card-body' if report_type == 'html' else ''}">
            <!-- Informations -->
            <div id="informations">
                <div class="row" id="so_date">
                    <div class="mb-3 col-6">
                        <t t-if="proposal_order.date_proposal">
                            <strong>Proposal Date:</strong>
                        </t>
                        <span t-field="proposal_order.date_proposal" t-options='{"widget": "date"}'/>
                    </div>
                </div>
                <div class="row">
                    <t t-if="proposal_order.partner_id">
                        <div id="shipping_address" class="col-lg-6">
                            <strong class="d-block mb-1">CUSTOMER:</strong>
                            <address t-field="proposal_order.partner_id"
                                     t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                        </div>
                    </t>
                </div>
            </div>
            <section>
                <table class="table table-sm" id="proposal_order_table">
                    <thead class="bg-100">
                        <tr>
                            <t t-set="colspan" t-value="6"/>
                            <th class="text-left">Prodotto</th>
                            <th class=' text-left'>Proposed Quantity</th>
                            <th class="text-left">Proposed Price</th>
                            <th class="text-left">Accepted Quantity</th>
                            <th class="text-left">Accepted Price</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <t t-set="current_subtotal" t-value="0.0"/>
                        <input class="record_id" type="hidden" t-att-value='proposal_order.id'/>
                        <t t-foreach="proposal_order.proposal_line_ids" t-as="product_line">
                            <tr>
                                <td>
                                    <span t-field='product_line.product_id.name'/>
                                </td>
                                <td>
                                    <span t-field='product_line.qty_proposed'/>
                                </td>
                                <td>
                                    <span t-field='product_line.price_proposed'/>
                                </td>
                                <td>
                                    <div class="number">
                                        <button id="minus" class="minus btn" style="color:#01ACAB;font-style:strong;">
                                            -
                                        </button>
                                        <input t-att-line_id='product_line.id' class='accepted_quantity'
                                               t-att-value="product_line.qty_proposed" style='width: 50px;'
                                               type="text"/>
                                        <button id="plus-btn" style="color:#01ACAB;font-style:strong;" class="plus btn">
                                            +
                                        </button>
                                    </div>
                                </td>

                                <td>
                                    <input class='accept_price' t-att-value="product_line.price_accepted" type="text"
                                           style='width: 90px;'/>
                                </td>
                            </tr>
                        </t>
                    </tbody>

                    <div id="total" class="row" name="total" style="page-break-inside: avoid;">
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                            <table class="table table-sm">
                                <tr class="border-black" style="border-bottom:1px solid primary;">
                                    <td>
                                        <strong>Accepted Total</strong>
                                    </td>
                                    <td class="text-left">
                                        <span class="text-right"
                                              data-id="accepted_total"
                                              t-field="proposal_order.accepted_total"
                                        />
                                    </td>
                                </tr>
                                <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                    <td>
                                        <strong>Proposed Total</strong>
                                    </td>
                                    <td class="text-left">
                                        <span class="text-right"
                                              data-id="total"
                                              t-field="proposal_order.total_amt"
                                        />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </table>
            </section>
        </div>
    </template>

</odoo>