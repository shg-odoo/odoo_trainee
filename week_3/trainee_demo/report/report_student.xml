<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <report
        id="student_report_card"
        model="student"
        string="Print"
        name="trainee_demo.student_report"
        file="trainee_demo.student_report"
        report_type="qweb-pdf"
        attachment_use="True"
    />


    <template id="student_report">
        <t t-call="web.html_container">
        <t t-call="web.external_layout">
          <center>
                <h1>student Data</h1>
            </center><br/>
                    <table style="width:100%;border: 2px solid #ddd;padding: 8px; ">
                       <thread>
                       <tr>
                       <th>Name</th>
                       <th>Roll NO</th>
                       <th>Email</th>
                       <th>College</th>
                       <th>Date of Birth</th>
                       <th>Contact</th>
                       </tr>
                       <t t-foreach="docs" t-as="student">
                       <tr  style="border: 2px solid #ddd;padding: 8px;">
                       <td style="border: 2px solid #ddd;padding: 8px;">
                       <span t-field="student.name"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;"> 
                       <span t-field="student.enrollmentNo"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;"> 
                       <span t-field="student.college_id"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;">
                       <span t-field="student.birthday"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;">
                       <span t-field="student.contactNo"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;">
                       <span t-field="student.email"/>
                       </td>
                       </tr>
                       </t>
                       </thread>
                    </table>
        </t>
        </t>
    </template>
</odoo>