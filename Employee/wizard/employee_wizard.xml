<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="employee_wizard_form" model="ir.ui.view">
        <field name="name">employee.form.wizard</field>
        <field name="model">employee.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="department_id"/>
                </group>
                <footer>
                    <button name="add_department" string="Add Department" type="object" class="btn btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="employee_wizard_action" model="ir.actions.act_window">
        <field name="name">Add Department</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="employee_wizard_form"/>
        <field name="binding_model_id" ref="model_employee"/>
        <field name="target">new</field>
    </record>
</odoo>
