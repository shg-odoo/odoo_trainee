<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Tree view employee -->
	<record model="ir.ui.view" id="tree_view_employee">
		<field name = "name">Employee</field>
		<field name = "model">employee</field>
		<field name="arch" type="xml">
			<tree>
				<field name = "empcode"/>
				<field name = "first_name"/>
				<field name = "middle_name"/>
				<field name = "last_name"/>
				<field name = "Gender"/>
				<field name = "dob"/>
				<field name = "hire_date"/>
				<field name = "age"/>
				<field name = "contact"/>
				<field name ="indian"/>
				<field name = "department_id"/>
				<field name = "UAN"/>
				<field name = 'skills_id' widget="many2many_tags"/>
				<field name = "Salary"/>
				<field name = "experiance"/>
			</tree>
		</field>
	</record>


	<!-- Calender View for Employees -->
	<record model="ir.ui.view" id="employee_calendar_view">
	    <field name="name">employee</field>
	    <field name="model">employee</field>
	    <field name="arch" type="xml">
		    <calendar color = "first_name" date_start="dob" string="Employee Calendar" mode="month">
			    <field name="first_name"/>
			    <field name="contact"/>
		    </calendar>
	    </field>
    </record>
	

    <!-- gantt View -->
	<record model="ir.ui.view" id="employee_gantt_view">
		<field name="name">employee.gantt</field>
		<field name="model">employee</field>
		<field name="arch" type="xml">
			<gantt date_stop="current_date" date_start="dob" string="Session Gantt" default_group_by="experiance">
			</gantt>
		</field>
	</record>

	<!-- Graph View -->
	<record model="ir.ui.view" id="employee_session_graph_view">
		<field name="name">employee.graph</field>
		<field name="model">employee</field>
		<field name="arch" type="xml">
			<graph string="Employee by percentage">
				<field name="first_name"/>
				<field name="Salary" type="measure"/>
				<field name = "experiance" type = "measure"/>
				<field name = "department_id" type = "measure"/>
			</graph>
		</field>
	</record>

	<!-- Employee Serach View -->
    <record model="ir.ui.view" id="employee_search_view">
        <field name="name">employee</field>
        <field name="model">employee</field>
        <field name="arch" type="xml">
            <search>
                <field name="first_name"/>
                <field name="middle_name"/>
                <field name="last_name"/>
                <field name = 'skills_id'/>
                <!-- <field name = "UAN"/> -->
                <!-- <field name = "branch"/> -->
                <filter string="Male" name="male" domain="[('Gender','=','male')]" />
                <separator/>
                <filter string="Female" name="female" domain="[('Gender','=','female')]" />
                <group string="Group By">
                     <filter string="Gender" name="Gender" context="{'group_by':'Gender'}" />
                     <filter string="Department" name = "department_id" context="{'group_by':'department_id'}"/>
                     <!-- <filter string = 'Skills' name ='skills_id' context="{'group_by':'skills_id'}"/> -->
                </group>
            </search>
        </field>
    </record> 

	<!-- Form View -->
    <record id="employee_view_form" model="ir.ui.view" >
	    <field name="name">employee.form</field>
	    <field name="model">employee</field>
	    <field name="arch" type="xml">
	        <form>
	            <notebook>
	                <page string="Personal Details">
	                    <group>
	                        <field name="empcode"/>
	                        <field name="first_name"/>
	                        <field name="middle_name"/>
	                        <field name="last_name"/>
	                        <field name="contact"/>
	                        <field name="dob"/>
	                        <field name="Gender" widget="radio" options="{'vertical':true}"/>
	                        <field name = "indian"/>
	                        <field name="hire_date"/>
	                    </group>     
	                </page>
	                <page string="Skills And Experiance">
	                    <group>
	                        <field name="empcode"/>
	                        <!-- <field name = "UAN" readonly = "True"/> -->
	                       	<field name='skills_id'/>
	                        <field name="department_id"/>
	                        <field name="Salary"/>
	                        <field name="experiance" readonly='True' />
	                    </group>     
	                </page>
	            </notebook>
	        </form>
	    </field>
	</record>


		<!-- Kanban View -->
	<record id="employee_kanban" model="ir.ui.view">
        <field name="name">employee.kanban.view</field>
        <field name="model">employee</field> 
        <field name="arch" type="xml">
            <kanban>
                <field name="first_name"/>
                <field name="middle_name"/>
                <field name="last_name"/>
                <!-- <field name="image" widget="image"/> -->
                <field name="empcode"/>
                   <templates>  
                       <t t-name="kanban-box">
                            <div class="container">
                             <div class="row">
                               <div class="col-6">
                                    <div class="oe_kanban_details">
                                       <strong class="o_kanban_record_title"> 
                                       <field name="first_name"/>
                                       <field name="middle_name"/>
                					   <field name="last_name"/>
                                       </strong>
                                   </div>
                                   <div class="oe_kanban_details">
                                       <strong   class="o_kanban_record_title">Contact No.: </strong>
                                       <field name="contact"/>
                                   </div>
                                    <div class="oe_kanban_details">
                                       <strong  class="o_kanban_record_title">Salary: </strong>
                                       <field name="Salary"/>
                                   </div>
                               </div>
                             </div>
                           </div>
                       </t>          
                   </templates>       
            </kanban>   
        </field>
    </record>

	<!-- Pivot View -->
	<record id="employee_pivot_view" model = "ir.ui.view">
		<field name="name">employee.pivot</field>
	    <field name="model">employee</field>
	    <field name="arch" type="xml">
	    	<pivot string="Timesheet">
			    <field name="empcode" type="row"/>
			    <field name="current_date" interval="month" type="col"/>
			    <field name="Salary" type="measure" widget="float_time"/>
			</pivot>
	    </field>
	</record>
	  <!-- Action for Employee -->
    <record id="employee_action" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">employee</field>
        <field name="view_mode">tree,kanban,calendar,gantt,graph,form,pivot</field>
    </record>

    <record id="skills_action" model="ir.actions.act_window">
    	<field name="name">Skills</field>
    	<field name="res_model">employee.skills</field>
    	<field name="view_mode">tree,form,search</field>
    </record>

    <record id="dept_action" model="ir.actions.act_window" >
	    <field name="name">Department Name</field>
	    <field name="res_model">employee.department</field>
	    <!-- <field name = "res_model">employee</field> -->
	    <field name="view_mode">tree,form,search</field>
    </record>

     <!-- <menuitem id="employee_menu" name="Employees Information" />  -->
 
	<!-- <menuitem id="menu_employee_child" name="Directory" action="employee_action" parent="employee_menu"/> -->

	<menuitem id="employee_menu_root" name="Employees Information">
	    <menuitem id="employee_first_level_menu" sequence="1" name="Directory">
	        <menuitem id="employee_model_menu_action" name = "Show Employees" action="employee_action"/>
	    </menuitem>
	    <menuitem id="department_id" name="Department Data" sequence="2" action="dept_action"/>
	    <menuitem id="skills_id" name="Skills" sequence="3" action="skills_action"/>
	</menuitem>  

</odoo>