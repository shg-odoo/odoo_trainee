    <template id="report_employee_view">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <center><h1><b>Employee Details </b></h1></center>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">First Name</th>
                                <th scope="col">Middle Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Gender</th>
                                <th scope="col">Birthdate</th>
                                <th scope="col">Contact</th>
                            </tr>
                        </thead>    
                        <tbody>
                        <t t-foreach="docs" t-as="doc">
                        <tr>
                            <td><span t-field="doc.first_name"/></td>
                            <td><span t-field="doc.middle_name"/></td>
                            <td><span t-field="doc.last_name"/></td>
                            <td><span t-field="doc.Gender"/></td>
                            <td><span t-field="doc.dob"/></td>
                            <td><span t-field="doc.contact"/></td>
                        </tr>
                        </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <template id="inherit_report_employee_view" inherit_id="report_employee_view">
        <xpath expr="//div[hasclass('page')]" position="inside">
            <h2>Inside</h2>
        </xpath>
        <xpath expr="(//th)[5]" position="after">
            <th scope="col">Age</th>
        </xpath>
        <xpath expr="(//td)[5]" position="after">
            <td><span t-field="doc.age"/></td>
        </xpath>
    </template>

	<record id="full_employee_report" model="ir.actions.report">
	    <field name="name">Get Full Report</field>
	    <field name="model">employee</field>
	    <field name="report_type">qweb-pdf</field>
	    <field name="report_name">Employee.full_report_employee_view</field>
	    <field name="report_file">employee.report_employee</field>
	    <field name="attachment_use" eval="False"/>
	    <field name="binding_model_id" ref="model_employee"/>
	    <field name="binding_type">report</field>
	</record>

    <template id="full_report_employee_view" inherit_id="report_employee_view" primary="True">
        <xpath expr="(//th)[7]" position="after">
            <th scope="col">Salary</th>
        </xpath>
        <xpath expr="(//td)[7]" position="after">
            <td><span t-field="doc.Salary"/></td>
        </xpath>
        <xpath expr="(//th)[8]" position="after">
            <th scope="col">Skills</th>
        </xpath>
        <xpath expr="(//td)[8]" position="after">
            <td><span t-field="doc.skills_id"/></td>
        </xpath>
    </template>
	  <!-- Action for Employee -->
    <record id="employee_action" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">employee</field>
        <field name="view_mode">tree,kanban,calendar,gantt,graph,form,pivot</field>
    </record>

    <record id="skills_action" model="ir.actions.act_window">
    	<field name="name">Skills</field>
    	<field name="res_model">employee.skills</field>
    	<field name="view_mode">tree,form,search</field>
    </record>

    <record id="dept_action" model="ir.actions.act_window" >
	    <field name="name">Department Name</field>
	    <field name="res_model">employee.department</field>
	    <!-- <field name = "res_model">employee</field> -->
	    <field name="view_mode">tree,form,search</field>
    </record>

     <!-- <menuitem id="employee_menu" name="Employees Information" />  -->
 
	<!-- <menuitem id="menu_employee_child" name="Directory" action="employee_action" parent="employee_menu"/> -->

	<menuitem id="employee_menu_root" name="Employees Information">
	    <menuitem id="employee_first_level_menu" sequence="1" name="Directory">
	        <menuitem id="employee_model_menu_action" name = "Show Employees" action="employee_action"/>
	    </menuitem>
	    <menuitem id="department_id" name="Department Data" sequence="2" action="dept_action"/>
	    <menuitem id="skills_id" name="Skills" sequence="3" action="skills_action"/>
	</menuitem>  

</odoo>