<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- Tree view -->
    <record id="stdinherit_view_tree" model="ir.ui.view">           
        <field name="name">student.tree</field>
        <field name="model">student.inherit</field>
        <field name="arch" type="xml">                    
            <tree>
                <field name="name"/>
                <field name="average"/>
                <field name="country"/>
                <field name="image" widget="image" options="{'size': [90, 90]}" class="oe_avatar" />
                <field name="gender"/>
                <field name="birth_date"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="total"/>
                <field name="hobbies" widget="many2many_tags"/>
                <field name="college_id"/>
                <field name="address"/>
                <field name="review"/>
            </tree>
        </field>
    </record>

     <record model="ir.ui.view" id="stdinherit_view_form">           
        <field name="name">student.form</field>
        <field name="model">student.inherit</field>
        <field name="arch" type="xml">
        <form string="student">
            <sheet>
                <h1><field name="name"/></h1>
            <notebook>
                <page string="Personal Details">
                    <group>
                        <field name="image"/>
                        <field name="gender"/>
                        <field name="birth_date"/>
                    </group>
                    <group>
                        <field name="country"/>
                        <field name="address"/>
                        <field name="hobbies" widget="many2many_tags"/>
                        <field name="college_id"/>
                    </group>
                </page>
                <page string="Marks details">
                <group>
                    <field name="maths"/>
                    <field name="science"/>
                    <field name="english"/>
                </group>
                <group>
                    <group>
                        <field name="total"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="average"/>
                    </group>
                    <group>
                        <field name="review"/>
                    </group>
                </group>
                </page>
            </notebook>
            </sheet>
        </form>
        </field>
    </record>


    <record id="stdinherit_action" model="ir.actions.act_window" >
        <field name="name">student.inherit</field>
        <field name="res_model">student.inherit</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="inheritad_menu" name="Inheritance"/>

    <menuitem id="stdinherit_menu" name="details" sequence="1" action="stdinherit_action" parent="inheritad_menu"/>
</odoo>