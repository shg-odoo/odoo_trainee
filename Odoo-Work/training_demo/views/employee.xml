<!--COMPANY FORM view START START-->
        <record model="ir.ui.view" id="company_form_view1">
            <field name="name">company.form</field>
            <field name="model">employee.company</field>
            <field name="arch" type="xml">
                 <form string="Company Form">
                    <sheet>
                        <group>
                            <field name="company_name"/>
                            <field name="company_city"/>
                            <field name="id1">
                                <tree>
                                    <field name="branch"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form> 
            </field>
        </record>
<!--COMPANY FORM view END-END-->

<!--COMPANY FILTER/SEARCH view START -->
    
    <record model="ir.ui.view" id="company_search_view">
            <field name="name">Employee.company.search</field>
            <field name="model">employee.company</field>
            <field name="arch" type="xml">
                <search>
                    <field name='company_name'/>
                    <field name ='company_city'/>
                    <group string="Group By">
                        <filter string="Location" name="company_city" context="{'group_by':'company_city'}" />
                    </group>
                </search>
            </field>
     </record>

<!--COMPANY FILTER/SEARCH view END-END -->



<!-- COMPANY ALL view END END-->


<!-- VIEW of COUNTRY All START-START -->

<!-- tree view COUNTRY START START -->
        <record model="ir.ui.view" id="country_tree_view">
            <field name="name">Employee.country.tree</field>
            <field name="model">employee.country</field>
            <field name="arch" type="xml">
                <tree string="Country Data">
                    <field name="current_city"/>
                    <!-- <field name="current_state"/> -->
                    <field name="country_name"/>
                </tree>
            </field>
        </record>
<!-- tree view COUNTRY END-END -->

<!-- form view for COUNTRY START -->
