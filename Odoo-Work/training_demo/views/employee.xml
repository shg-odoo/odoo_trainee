            <field name="name">Employee.hobbies.tree</field>
            <field name="model">employee.hobbies</field>
            <field name="arch" type="xml">
                <tree string="Hobbies Data">
                    <field name="name"/>
                </tree>
            </field>
        </record>
<!--HOBBIES TREE/LIST view END-END-->

<!--HOBBIES FORM view START START-->
        <record model="ir.ui.view" id="course_form_view1">
            <field name="name">Hobbies.form</field>
            <field name="model">employee.hobbies</field>
            <field name="arch" type="xml">
                 <form string="Hobbies Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form> 
            </field>
        </record>
<!--HOBBIES FORM view END-END-->


<!--HOBBIES ALL view  END - END -->






