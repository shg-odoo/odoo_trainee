<!-- ACTION OF ALL VIEW START -->

       <record id="employee_details_action" model="ir.actions.act_window" >
            <field name="name">employee</field>
            <field name="res_model">employee</field>
            <field name="view_mode">tree,form,calendar,graph,kanban,pivot,search,gantt</field>
        </record>

        <record id="company_action" model="ir.actions.act_window" >
            <field name="name">employee</field>
            <field name="res_model">employee.company</field>
            <field name="view_mode">tree,form,search</field>
        </record>

        <record id="country_action" model="ir.actions.act_window" >
            <field name="name">employee</field>
            <field name="res_model">employee.country</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="hobbies_action" model="ir.actions.act_window" >
            <field name="name">employee</field>
            <field name="res_model">employee.hobbies</field>
            <field name="view_mode">tree,form</field>
        </record>

<!-- ACTION OF ALL VIEW END-END -->




        <menuitem id="employee-all" name="Employee Data" />
        <menuitem id="emp-details" name="EmployeeDetails" sequence="1" action="employee_details_action" parent="employee-all"/>
        
        <menuitem id="emp-hobbies" name="Employee-Hobbies" sequence="2" action="hobbies_action" parent="employee-all"/>
        <menuitem id="company-name" name="Company-Name" sequence="3" action="company_action" parent="employee-all"/>
        <menuitem id="emp-country" name="Employee-Country" sequence="4" action="country_action" parent="employee-all"/>
        

</odoo>