<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record model="ir.ui.view" id="employee_id">
            <field name="name">Employee</field>
            <field name="model">employee</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="lname"/>
                    <field name="fname"/>
                    <field name="employmentNo"/>
                    <field name="contactNo"/>
                    <field name="email"/>
                    <field name="branch"/>
                    <field name="bdate"/>
                    <field name="gender" widget="radio" options="{'vertical':true}"/>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <!-- <field name="current_date"/> -->
                    <field name="maths"/>
                    <field name="physics"/>
                    <field name="chemistry"/>
                    <field name="percentage" />
                    <field name="income"/>
                    <field name="age"/>
                    <field name="total"/>
                    <field name="working"/>
                    <field name ="hobbies_id" widget="many2many_tags" />
                    <field name="company_id" widget="one2many_tags"/>
                    <field name="country_id" widget="one2many_tags"/>
                </tree>
            </field>
        </record>

<!-- Employee CALENDAR view  START-->
        <record model="ir.ui.view" id="employee_calendar_view">
            <field name="name">employee</field>
            <field name="model">employee</field>
            <field name="arch" type="xml">
                <calendar color="employmentNo" date_start="bdate" string="Employee Calendar" mode="month">
                    <field name="lname"/>
                    <field name="contactNo"/>
                </calendar>
            </field>
        </record>
<!-- Employee CALENDAR view END END-->

<!-- form view for detail-->
    <record model = 'ir.ui.view' id = 'employee_form_id1'>
        <field name='name'>Employee.form</field>
        <field name='model'>employee</field>
        <field name='arch' type='xml'>
        <form>
            <sheet>
                <h1>First Name:<field name="fname"/></h1>
                    <notebook>
                        <page string="Employee Personal Details">
                            <group>
                                <field name="image" widget="image" class="oe_avatar"/>
                                <field name="hobbies_id" widget="many2many_tags"/>
                                <field name="country_id" widget="one2many_tags"/>
                                <field name="company_id" widget="one2many_tags"/> 
                            </group>
                            <group> 
                                <field name = 'lname'/>
                                <field name = 'bdate'/>
                                <field name = 'gender' widget="radio" options='{"horizontal":true}'/>  
                                <field name = 'contactNo'/>
                                <field name = 'email'/>
                                <field name = 'age'/>
                                <field name = 'html'/>
                            </group>
                        </page>
                        <page string='Employee Others detail'>
                            <group>
                                
                                <field name = 'employmentNo'/>
                                <field name="branch"/>
                                <field name="income"/>
                                <field name = 'current_date'/>   
                            </group>
                        </page>
                        <page string="Employee Marks Detail"> 
                            <group>
                                <field name = 'maths'/>                 
                                <field name = 'physics'/>
                                <field name = 'chemistry'/>
                                <field name = 'total'/>
                                <field name = 'percentage'/>
                            </group>
                        </page>
                    </notebook>
            </sheet>
        </form>
        </field>
    </record>
    





<!-- Employee SEARCH view  START-->
        <record model="ir.ui.view" id="employee_search_view">
            <field name="name">Employee</field>
            <field name="model">employee</field>
            <field name="arch" type="xml">
                <search>
                    <field name="fname"/>
                    <field name="lname"/>
                    <field name="branch"/>
                    <field name="income"/>
                    <field name="email"/>
                    <filter string="Male" name="male" domain="[('gender','=','male')]" />
                    <separator/>
                    <filter string="Female" name="female" domain="[('gender','=','female')]" />
                    <separator/>
                    <filter string="Income" name="income" domain="[('income','>','15000')]" />
                    <group string="Group By">
                         <filter string="Branch" name="branch" context="{'group_by':'branch'}" />
                         <filter string="Gender" name="gender" context="{'group_by':'gender'}" />
                         <filter string="Income" name="income" context="{'group_by':'income'}" />
                         <filter string="Last Name" name="lname" context="{'group_by':'lname'}" />
                    </group>
                </search>
            </field>
        </record> 
<!-- Employee SEARCH view END END-->


<!-- Employee kanban  view -->
        <record model="ir.ui.view"  id="employee_kanban">
            <field name="name">Employee.kanban</field>
            <field name="model">employee</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-6">
                                        <strong> Name: <field name="fname"/></strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <span class="badge badge-pill"><strong>E_id:-<field name="employmentNo"/></strong></span>
                                    </div>
                                </div>
                                <div>
                                    <strong>Email: </strong><field name="email"/>
                                </div>
                                <div>
                                    <strong>Branch: </strong><field name="branch"/>
                                </div>
                                <div>
                                    <strong>Contact Number: </strong><field name="contactNo"/>
                                </div>
                                <div>
                                    <strong>Gender: </strong><field name="gender"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
<!-- Employee kanban  view END END -->

<!-- Employee GANTT view  START-->

        <record model="ir.ui.view" id="employee_gantt_view">
            <field name="name">Employee.gantt</field>
            <field name="model">employee</field>
            <field name="arch" type="xml">
                <gantt string="Session Gantt" date_stop="current_date" date_start="bdate" default_group_by="gender">
                </gantt>
            </field>
        </record>
<!-- Employee GANTT view END END-->


<!-- Employee GRAPH view  START-->
        <record model="ir.ui.view" id="employee_session_graph_view">
            <field name="name">employee.search</field>
            <field name="model">employee</field>
            <field name="arch" type="xml">
                <graph string="Employee by income">
                    <field name="fname"/>
                    <!-- <field name="percentage" type="measure"/> -->
                    <field name="income" type="measure"/>
                </graph>
            </field>
        </record>
<!-- Employee GRAPH view END END-->
        
<!-- Employee pivot view START -->
<record model="ir.ui.view" id="employee_pivot_id1">
        <field name="name">Employee.pivot</field>
        <field name="model">employee</field>
        <field name="arch" type="xml">
            <pivot string='Pivot View'>
                <field name='fname' type='row'/>
                <!-- <field name='lname' type='row'/> -->
                <field name='percentage' type='measure'/>
            </pivot>
        </field>
    </record>
<!-- Employee pivot view END-END -->











