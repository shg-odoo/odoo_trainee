        <field name='name'>Employee.country.form</field>
        <field name='model'>employee.country</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                <group>
                    <field name = 'current_city'/>
                    <!-- <field name = 'current_states'/> -->
                    <field name = 'country_name'/>
                </group>
                </sheet>
            </form>
        </field>
    </record>
