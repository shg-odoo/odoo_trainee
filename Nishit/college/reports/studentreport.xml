<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <report
        id="student_report"
        string="Student report"
        model="college.student"
        report_type="qweb-pdf"
        name="college.student_report"
        file="college.student_report"/>

    <report
        id="student_report_primary"
        model="college.student"
        string="Student Report Primary"
        name="college.student_report_primary__view"
        file="college.student_report"
        report_type="qweb-pdf" 
        attachment_use="True"/>
   
    <template id="student_report"> 
        <t t-call="web.html_container">
            <!-- <t t-call="web.external_layout"> -->
                <div class="page">
                    <center>
                    <h2>Student Details</h2>
                    </center>
                 <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Branch</th>
                        <th scope="col">Age</th>
                    </tr>
                    </thead>
                    <t t-foreach="docs" t-as="doc">  
                    <tbody>
                    <tr>
                        <td align='center'><span t-field="doc.name"/></td>
                        <td align='center'><span t-field="doc.course"/></td>
                        <td align='center'><span t-field="doc.age"/></td>
                    </tr>
                    </tbody>
                    </t>
                 </table> 
                </div>
            <!-- </t> -->
        </t>

    </template>

    <template id="inherit_report_view" inherit_id="student_report">
        <xpath expr="//div[hasclass('page')]" position="inside">
            <h2>Hello</h2>
        </xpath>
      <xpath expr="(//th)[1]" position="after">
        <th scope="col">AGE</th>
      </xpath>
      <xpath expr="(//td)[1]" position="after">
        <td align='center'><span t-field="doc.age"/></td>
      </xpath>
    </template>

    <template id="student_report_primary__view" inherit_id="student_report" primary="True">
      <xpath expr="(//th)[1]" position="after">
        <th scope="col">Gender</th>
      </xpath>
      <xpath expr="(//td)[1]" position="after">
        <td align='center'><span t-field="doc.gender"/></td>
      </xpath>
    </template>

</odoo>