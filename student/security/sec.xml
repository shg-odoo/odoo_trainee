<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <record model="ir.module.category" id="module_category_student">
            <field name="name">student details</field>
            <field name="description">helps you manage your Student details</field>
            <field name="sequence">1</field>
        </record>
        <record id="group_student_detail" model="res.groups">
            <field name="name">user</field>
            <field name="category_id" ref="module_category_student"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_college_admin" model="res.groups">
            <field name="name">administrator</field>
            <field name="category_id" ref="module_category_student"/>
            <field name="implied_ids" eval="[(4, ref('group_student_detail'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>
        <record id="student_rule" model="ir.rule">
            <field name="name">Student</field>
            <field name="model_id" ref="student.model_student"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('create_uid','=',user.id)]</field>
        </record>
    </data>
</odoo>