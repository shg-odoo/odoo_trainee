<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record model="ir.ui.view" id="student_view_tree">
       <field name="name">Student.tree</field>
       <field name="model">student</field>
       <field name="arch" type="xml">
           <tree string="Student list">
             <field name="name"/>
             <field name="enrollmentNo"/>
             <field name="current_date"/>
             <field name="branch"/>
             <field name="contactNo"/>
             <field name="email"/>
             <field name="bdate"/>
             <field name="gender"/>
             <field name="percentage"/>
             <field name="maths"/>
             <field name="physics"/>
             <field name="chemistry"/>
             <field name="fees"/>
             <field name="age"/>
             <field name="total"/>
             <field name="state"/>
             <field name="college_id"/>
             <field name="hobbies" widget="many2many_tags"/>
             <field name="image" widget="image" class="oe_avatar"/>




         </tree>
     </field>
 </record>



 <record id="student_view_form" model="ir.ui.view" >
    <field name="name">Student.form</field>
    <field name="model">student</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button name="action_confirm" type="object" string="Confirm" states="draft" class="oe_highlight" />
                <button name="action_done" type="object" states="confirm" string="Done" class="oe_highlight" />
                <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
            </header>
            <notebook>
                <page string="Personal Details">

                    <group>
                        <field name="name"/>

                        <field name="contactNo"/>
                        <field name="email"/>
                        <field name="bdate"/>
                        <field name="gender" widget="radio" options="{'vertical':true}"/>
                        <field name="age"/>
                        <field name="image" widget="image" class="oe_avatar"/>
                    </group>     
                </page>
                <page string="College Details">
                    <group>
                        <field name="enrollmentNo"/>
                        <field name="college_id"/>
                        <field name="branch"/>
                        <field name="hobbies" widget="many2many_tags"/>
                        <field name="fees"/>
                        

                    </group>     
                </page>
                <page string="Acadmic Details">
                    <group>
                        <field name="maths"/>
                        <field name="physics"/>
                        <field name="chemistry"/>
                        <field name="percentage" readonly="1"/>
                        
                    </group>     
                </page>
            </notebook>
        </form>
    </field>
</record>

<record id="student_view_inherit" model="ir.ui.view">
    <field name="name"></field>
    <field name="model">student</field>
    <field name="inherit_id" ref="student.student_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="before">
            <field name="review" string="review"/>
        </xpath>
    </field>
</record>
<record model="ir.ui.view" id="student_calendar_view">
    <field name="name">student</field>
    <field name="model">student</field>
    <field name="arch" type="xml">
        <calendar color="name" date_start="bdate" string="Student Calendar" mode="month">
            <field name="name"/>
            <field name="contactNo"/>
        </calendar>
    </field>
</record>

<record model="ir.ui.view" id="student_search_view">
    <field name="name">student</field>
    <field name="model">student</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="branch"/>
            <filter string="Male" name="male" domain="[('gender','=','male')]" />
            <separator/>
            <filter string="Female" name="female" domain="[('gender','=','female')]" />
            <group string="Group By">
                <filter string="Branch" name="branch" context="{'group_by':'branch'}" />
                <filter string="Gender" name="gender" context="{'group_by':'gender'}" />
            </group>
        </search>
    </field>
</record> 

<record id="student_kanban" model="ir.ui.view">
    <field name="name">student.kanban.view</field>
    <field name="model">student</field> 
    <field name="arch" type="xml">
        <kanban>
            <field name="name"/>
            <field name="image" widget="image"/>
            <field name="id"/>
            <templates>  
             <t t-name="kanban-box">
                <div class="container">
                    <div class="o_kanban_image"> 
                     <img t-att-src="kanban_image('student', 'image', record.id.raw_value)"  alt="Avatar"/>
                 </div>
                 <div class="row">
                     <div class="col-6">
                        <div class="oe_kanban_details">
                         <strong class="o_kanban_record_title"> 
                             <field name="name"/>
                         </strong>
                     </div>
                     <div class="oe_kanban_details">
                         <strong   class="o_kanban_record_title">Email: </strong>
                         <field name="email"/>
                     </div>
                     <div class="oe_kanban_details">
                         <strong  class="o_kanban_record_title">Contact: </strong>
                         <field name="contactNo"/>
                     </div>
                 </div>

                 <div class="col-2">
                   <a type="button" class="col-sm-12 text-center">
                       <h3><button name="button_name" type="button_type" class="badge badge-pill badge-success">
                           <span><field name="branch" /></span>
                       </button></h3>
                   </a>
               </div>
           </div>
       </div>
   </t>          
</templates>       
</kanban>   
</field>
</record>
<record model="ir.ui.view" id="student_gantt_view">
    <field name="name">student.gantt</field>
    <field name="model">student</field>
    <field name="arch" type="xml">
        <gantt date_stop="current_date" date_start="bdate" string="Session Gantt" default_group_by="branch">
        </gantt>
    </field>
</record>



<record model="ir.ui.view" id="student_session_graph_view">
    <field name="name">student.search</field>
    <field name="model">student</field>
    <field name="arch" type="xml">
        <graph string="Student by percentage">
            <field name="name"/>

            <field name="fees" type="measure"/>
        </graph>
    </field>
</record>
<record id="student_pivot" model="ir.ui.view">
    <field name="name">Student.pivot</field>
    <field name="model">student</field>
    <field name="arch" type="xml">
        <pivot>
            <field name="name" type="row"/>
            <field name="fees" type="measure"/>
        </pivot>
    </field>
</record>

<record model="ir.ui.view" id="college_tree_view">
    <field name="name">college.tree</field>
    <field name="model">student.college</field>
    <field name="arch" type="xml">
        <tree string="College Data">
            <field name="college_name"/>
            <field name="college_city"/>
        </tree>
    </field>
</record>
<record model="ir.ui.view" id="college_form_view1">
    <field name="name">College.form</field>
    <field name="model">student.college</field>
    <field name="arch" type="xml">
       <form string="college Form">
        <sheet>
            <group>
                <field name="college_name"/>
                <field name="college_city"/>
                <field name="nested">
                    <tree>
                        <field name="branch"/>
                        <field name="enrollmentNo"/>
                    </tree>
                </field>
            </group>
        </sheet>
    </form> 

</field>
</record>

<record model="ir.ui.view" id="college_form_view1">
    <field name="name">Hobby.form</field>
    <field name="model">student.hobby</field>
    <field name="arch" type="xml">
       <form string="hobby Form">
        <sheet>
            <group>
                <field name="hobbies"/>
                <field name="id1">
                    <tree>
                        <field name="enrollmentNo"/>
                    </tree>
                </field>
            </group>
        </sheet>
    </form> 

</field>
</record>

<record model="ir.ui.view" id="hobbies_tree_view">
    <field name="name">college.tree</field>
    <field name="model">student.hobby</field>
    <field name="arch" type="xml">
        <tree string="Hobbies_tree">
            <field name="hobbies"/>
        </tree>
    </field>
</record>



<record model="ir.actions.act_window" id="student_action">
    <field name="name">Student data</field>
    <field name="res_model">student</field>
    <field name="view_mode">tree,form,calendar,search,kanban,graph,gantt,pivot</field>
</record>

<record id="college_action" model="ir.actions.act_window" >
    <field name="name">student</field>
    <field name="res_model">student.college</field>
    <field name="view_mode">tree,form</field>
</record>

<record id="hobbies_action" model="ir.actions.act_window" >
    <field name="name">student</field>
    <field name="res_model">student.hobby</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="student_data"  name="Students" />
<menuitem id="students_details" parent="student_data" name="Student Details" sequence="1" action="student_action"/>
<menuitem id="college_id" name="College Data" sequence="2" action="college_action"  parent="student_data"/>

<menuitem id="hobbies" name="Hobbies_list" sequence="3" action="hobbies_action"  parent="student_data"/>

</odoo>