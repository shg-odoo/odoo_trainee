<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_student_details_tree" model="ir.ui.view">
		<field name="name">student_details_tree</field>
		<field name="model">student.details</field>
		<field name="arch" type="xml">
			<tree string="Details">			
 				<field name="name"/>
 				<field name="enrollment_no"/>
 				<field name="contact_no"/>
 				<field name="email"/>
 				<field name="branch"/>
 				<field name="dob"/>
 				<field name="age"/>
 				<field name="age_group"/>
 				<field name="gender"/>
 				<field name="percentage"/>
 				<field name="image" widget="image" class="oe_avatar" height="50" width="50"/>

			</tree>
		</field>
	</record>

	<record id="view_student_details_form" model="ir.ui.view">
		<field name="name">student_details_form</field>
		<field name="model">student.details</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<h1>Student Deatils</h1>

					<notebook>
						<page string="Personal Info">
							<group>
								<field name="image" widget="image" class="oe_avatar" height="150" width="150"/>
								<field name="name"/>
								<field name="dob"/>
								<field name="gender"/>
								<field name="contact_no"/>
								<field name="email"/>
								<field name="address"/>
							</group>
						</page>

						<page string="Introduction">
							<field name="brief_intro"/>
						</page>

						<page string="Result">
							<group>
								<field name="branch"/>
								<field name="percentage"/>
							</group>
						</page>

					</notebook>
				</sheet>
			</form>
		</field>
	</record>


	<record id="view_student_details_calendar" model="ir.ui.view">
		<field name="name">student_details_calendar</field>
		<field name="model">student.details</field>
		<field name="arch" type="xml">
			<calendar string="Student_Details_calendar" date_start="dob" color="branch" quick_add="False" mode="year">
				<field name="image"/>
				<field name="name"/>
				<field name="enrollment_no"/>
			</calendar>
		</field>
	</record>

	<record id="view_students_details_gantt" model="ir.ui.view"> 
		<field name="name">students_details_gantt</field>
		<field name="model">student.details</field>
		<field name="arch" type="xml">
			<gantt string="Student_Details_Gantt" date_start="dob" date_stop="dob" color="branch" edit="false" paln="false" default_group_by="branch">

			</gantt>
		</field>
	</record>

	<record id="view_student_details_kanban" model="ir.ui.view">
		<field name="name">student_details_kanban</field>
		<field name="model">student.details</field>
		<field name="arch" type="xml">
			<kanban>
				<!-- mendatory to set image record.id.raw_value -->
				<field name="id"/>  
				<field name="name"/>
				<field name="branch"/>
				<field name="contact_no"/>
				<field name="image"/>
				<templates>
					<t t-name="kanban-box">
						<div t-attf-class="oe_kanban_golbal_click">
							<div class="o_kanban_image">
								<img t-att-src="kanban_image('student.details','image',record.id.raw_value)" alt="Image Not Found"/>
							</div>
							<div class="oe_kanban_details">
								<ul>
									<li>Name : <field name="name"/></li>
									<li>Branch : <field name="branch"/></li>
									<li>Enrollment No. : <field name="enrollment_no"/></li>
								</ul>
							</div>
						</div>

					</t>
				</templates>
			</kanban>
		</field>
	</record>

	<record id="view_student_details_graph" model="ir.ui.view">
		<field name="name">student_details_graph</field>
		<field name="model">student.details</field>
		<field name="arch" type="xml">
			<graph type="pie">
				<field name="name"/>
				<field name="percentage" type="measure"/>
			</graph>
		</field>
	</record>

	<record id="view_student_details_pivot" model="ir.ui.view">
		<field name="name">student_details_pivot</field>
		<field name="model">student.details</field>
		<field name="arch" type="xml">
			<pivot>
				<field name="name" type="row"/>
				<field name="enrollment_no" type="row"/>
				<field name="percentage" type="measure"/>
				<field name="contact_no" type="col"/>
			</pivot>
		</field>
	</record>

	<record id="view_student_details_search" model="ir.ui.view">
		<field name="name">student_details_search</field>
		<field name="model">student.details</field>
		<field name="arch" type="xml">
			<search string="search details">
				<field name="name"/>
				<field name="dob"/>
				<field name="gender"/>
				<field name="contact_no"/>
				<field name="email"/>
				<field name="branch"/>
				<field name="enrollment_no"/>
				<field name="percentage"/>
				<field name="name" filter_domain="['|', ('name', 'ilike', self),('dob','ilike',self),('gender','ilike','self'),('contact_no','ilike','self'),('email','ilike',self),('branch','ilike',self),('enrollment_no','ilike',self),('percentage','ilike',self)]"/>

				<filter string="Male" name="male" domain="[('gender','=','male')]" />
				<separator/>
				<filter string="Female" name="female" domain="[('gender','=','female')]"/>
				<separator/>
				<filter string="IT" name="branch" domain="[('branch','=','IT')]"/>

				<group string="Group_By">
					<filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
					<filter string="Branch" name="branch" context="{'group_by':'branch'}"/> 
				</group>
			</search>
		</field>
	</record>


	<record id="action_student_details" model="ir.actions.act_window">
    	<field name="name">Details</field>
   		<field name="res_model">student.details</field>
    	<field name="view_mode">tree,calendar,form,kanban,graph,gantt,pivot</field>
	</record>

	<menuitem id="student_root" name="Student" sequence="0"/>
	<menuitem id="student_details" name="Details" parent="student_root" action="action_student_details"/>

</odoo>
