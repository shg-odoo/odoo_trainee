<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report
        id="student_report_card"
        model="student"
        string="Personal Details"

        name="roku_app.student_report"
        file="roku_app.student_report"
        report_type="qweb-pdf"
        attachment_use="True"
        />


        <template id="student_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                <div class="page">
                  <center>
                    <h1>Student Data</h1>
                </center>
            </div><br/>
                <table style="width:100%;border: 2px solid #ddd;padding: 8px;">
                 <thread>
                     <tr>
                         <th>Name</th>
                         <th>City</th>
                         <th>Age</th>
                         <th>Salary</th>
                         
                     </tr>
                     <t t-foreach="docs" t-as="o">
                         <tr>
                             <td>
                                 <span t-field="o.name"/>
                             </td>
                             <td> 
                                 <span t-field="o.city"/>
                             </td>
                             <td> 
                                 <span t-field="o.age"/>
                             </td>
                             <td>
                                 <span t-field="o.salary"/>
                             </td>
                             

                         </tr>
                     </t>
                 </thread>
             </table>
         </t>
     </t>
 </template>


 <template id="inherit_report_student_view" inherit_id="student_report">
    <xpath expr="//div[hasclass('page')]" position="inside">
        <h2>Inside</h2>
    </xpath>
    <xpath expr="(//th)[1]" position="after">
        <th scope="col">Gender</th>
    </xpath>
    <xpath expr="(//td)[1]" position="after">
        <td align="center">
            <span t-field="o.gender"/>
        </td>
    </xpath>
</template>
<template id="inherit_report_student_view_primary" inherit_id="student_report" primary="True">
    <xpath expr="(//th)[1]" position="after">
        <th scope="col">city</th>
    </xpath>
    <xpath expr="(//td)[1]" position="after">
        <td align="center">
            <span t-field="o.city"/>
        </td>
    </xpath>
</template>





